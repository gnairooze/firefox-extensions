{

    "manifest_version": 3,
    "name": "Short2Regular",
    "version": "1.0",
  
    "description": "Plays short youtube video as regular one",
  
    "icons": {
      "48": "icons/youfull-48.png"
    },
  
    "permissions": [
			"tabs"
	  ],
	
	  "page_action": {
      "show_matches": ["https://*.youtube.com/*"],
      "browser_style": true,
      "default_icon": {
        "48": "icons/youfull-48.png"
      }
    },
    
	  "background": {
	    "service_worker": "short2regular.js"
	  }
  }